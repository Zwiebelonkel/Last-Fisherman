[sub_resource type="GDScript" id="GDScript_gfcdx"]
script/source = "extends PanelContainer\n\n@onready var fish_layer: Control = $MarginContainer/VBoxContainer/FishArea/FishLayer\n@onready var title_label: Label = $MarginContainer/VBoxContainer/Title\n@onready var status_label: Label = $MarginContainer/VBoxContainer/Status\nvar rng := RandomNumberGenerator.new()\n\nconst ICON_SHADER_PATH := \"res://shader/icon.gdshader\"\nconst FALLBACK_ICON_PATH := \"res://assets/fish/unknown.png\"\n\nfunc _ready():\n\tawait get_tree().process_frame\n\trng.randomize()\n\tpopulate_aquarium()\n\nfunc populate_aquarium():\n\tif fish_layer == null:\n\t\treturn\n\tfor child in fish_layer.get_children():\n\t\tchild.queue_free()\n\n\tvar fish_entries: Array = []\n\tif Player.has_method(\"get_aquarium_fish\"):\n\t\tfish_entries = Player.get_aquarium_fish()\n\t\tif fish_entries.is_empty() and Player.has_method(\"fill_aquarium_with_caught_species\"):\n\t\t\tPlayer.fill_aquarium_with_caught_species()\n\t\t\tfish_entries = Player.get_aquarium_fish()\n\n\tif title_label:\n\t\ttitle_label.text = \"Hub-Aquarium (%d Fische)\" % fish_entries.size()\n\tif status_label:\n\t\tstatus_label.text = fish_entries.is_empty() ? \"Keine gefangenen Fische vorhanden.\" : \"Zeigt alle gefangenen Fische aus dem Fischbuch.\"\n\n\tvar area_size := fish_layer.size\n\tif area_size == Vector2.ZERO:\n\t\tarea_size = fish_layer.get_rect().size\n\n\tfor fish_data in fish_entries:\n\t\tvar fish_icon := _create_fish_icon(fish_data)\n\t\tfish_layer.add_child(fish_icon)\n\t\t_animate_fish(fish_icon, area_size)\n\nfunc _create_fish_icon(fish_data: Dictionary) -> TextureRect:\n\tvar icon_path := fish_data.get(\"icon\", FALLBACK_ICON_PATH)\n\tvar texture: Texture2D = null\n\tif icon_path is String and icon_path != \"\" and ResourceLoader.exists(icon_path):\n\t\ttexture = load(icon_path)\n\telse:\n\t\ttexture = load(FALLBACK_ICON_PATH)\n\n\tvar rect := TextureRect.new()\n\trect.texture = texture\n\trect.material = _make_icon_material()\n\trect.stretch_mode = TextureRect.STRETCH_KEEP_ASPECT\n\trect.size = Vector2(72, 56)\n\trect.position = Vector2(rng.randf_range(-60.0, 20.0), rng.randf_range(12.0, max(12.0, fish_layer.size.y - 60.0)))\n\trect.modulate = Color(1.0, 1.0, 1.0, 0.92)\n\trect.mouse_filter = Control.MOUSE_FILTER_IGNORE\n\treturn rect\n\nfunc _make_icon_material() -> ShaderMaterial:\n\tvar mat := ShaderMaterial.new()\n\tmat.shader = load(ICON_SHADER_PATH)\n\tmat.set_shader_parameter(\"enable_bobbing\", true)\n\tmat.set_shader_parameter(\"enable_pulse\", true)\n\tmat.set_shader_parameter(\"bobbing_amplitude\", rng.randf_range(0.7, 1.4))\n\tmat.set_shader_parameter(\"bobbing_speed\", rng.randf_range(1.0, 2.6))\n\tmat.set_shader_parameter(\"sway_amplitude\", rng.randf_range(1.5, 4.0))\n\tmat.set_shader_parameter(\"sway_speed\", rng.randf_range(0.6, 1.6))\n\tmat.set_shader_parameter(\"enable_sway\", true)\n\treturn mat\n\nfunc _animate_fish(fish_icon: TextureRect, area_size: Vector2):\n\tvar start_y := rng.randf_range(16.0, max(16.0, area_size.y - 56.0))\n\tvar start_pos := Vector2(rng.randf_range(-80.0, -20.0), start_y)\n\tvar end_pos := Vector2(area_size.x + rng.randf_range(20.0, 80.0), clamp(start_y + rng.randf_range(-60.0, 60.0), 12.0, max(12.0, area_size.y - 56.0)))\n\tfish_icon.position = start_pos\n\n\tvar duration := rng.randf_range(8.0, 14.0)\n\tvar return_duration := rng.randf_range(6.5, 12.5)\n\tvar tween := fish_icon.create_tween().set_loops()\n\ttween.tween_property(fish_icon, \"position\", end_pos, duration).set_trans(Tween.TRANS_SINE).set_ease(Tween.EASE_IN_OUT)\n\ttween.tween_property(fish_icon, \"position\", start_pos, return_duration).set_trans(Tween.TRANS_SINE).set_ease(Tween.EASE_IN_OUT)\n"

